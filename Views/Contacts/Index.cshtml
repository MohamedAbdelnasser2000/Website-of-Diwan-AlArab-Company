@model IEnumerable<GovEgy_2.Models.Contact>

@{
    ViewBag.Title = "Index";
}

<!-- ======= Hero Section ======= -->
<section id="hero1" class="d-flex justify-cntent-center align-items-center">
</section><!-- End Hero -->



<div style="margin-left:10%;margin-right:10%">

    <br />
    <div class="title-heading-w3 text-center mx-auto mb-5 pb-sm-4">
        <h3 class="title-main title-big " style="font:bold">قائمة اتصالاتنا</h3>
    </div>
    <div class="btn btn-style btn-light mt-sm-3" href="about.html" style="color:white">
        @Html.ActionLink("صفحة اتصالتنا", "Create")<i class="fa fa-arrow-right ml-2" aria-hidden="true"></i>
    </div>

    <br />
    <br />

    <table class="table">
        <tr>
            <th>
                الاسم
            </th>
            <th>
                البريد الالكتروني
            </th>
            <th>
                رقم التليفون
            </th>
            <th>
                الرسالة
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <br />
    <br />
    <br />
    <br />
</div>