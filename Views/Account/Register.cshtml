@model GovEgy_2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div style="background-image: url('../../Content/Image/WhatsApp Image 2021-12-15 at 2.54.00 PM.jpeg');">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="row " style="margin-left:25%;margin-right:5% ">
        <div class="col-md-8 " style=" border: 1px outset #0c49e4; border-radius: 20px;padding:15px;width:auto; height:auto; background-color: #afafafc2;">
            <section id="loginForm">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <br />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <h2 class="title-big logo text-center" style="font-style: normal; font: bolder; text-align:center;color:white"> انشاء حساب جديد</h2>
                    <br />


                    <div class="form-group">
                        <h4 style="text-align: center; color: white">اسم المستخدم</h4>
                        <div class="">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <h4 style="text-align: center; color: white">البريد الالكتروني</h4>
                        <div class="">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <h4 style="text-align: center; color: white">ادخل كلمة السر</h4>
                        <div class="">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <h4 style="text-align: center; color: white">اعد ادخال كلمة السر</h4>
                        <div class="">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 ">
                            <input type="submit" class="btn btn-success" value="تسجيل الحساب" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
    <br />
    <br />
    <br />
 
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
